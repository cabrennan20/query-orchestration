{
  "algorithm_id": "hybrid-rrf",
  "version": "1.0",
  "name": "Hybrid Search with RRF",
  "components": [
    {
      "type": "keyword_search",
      "name": "keyword_component",
      "enabled": true,
      "config": {
        "fields": [
          "title^3",
          "description",
          "tags^2"
        ],
        "operator": "or",
        "minimum_should_match": "75%",
        "size": 20
      }
    },
    {
      "type": "vector_search",
      "name": "vector_component",
      "enabled": true,
      "config": {
        "field": "embedding_vector",
        "k": 20,
        "num_candidates": 100,
        "similarity": "cosine"
      }
    },
    {
      "type": "merge",
      "name": "rrf_merger",
      "enabled": true,
      "config": {
        "strategy": "rrf",
        "k": 60,
        "max_results": 10
      }
    }
  ],
  "metadata": {
    "created_by": "system",
    "status": "production",
    "description": "Combines keyword and vector search using Reciprocal Rank Fusion",
    "tags": ["hybrid", "rrf", "production"]
  }
}
